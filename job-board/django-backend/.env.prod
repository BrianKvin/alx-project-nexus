# Django Settings
DEBUG=0
SECRET_KEY=your-very-secure-production-secret-key
ALLOWED_HOSTS=your-domain.com,www.your-domain.com
DJANGO_SETTINGS_MODULE=config.settings.production

# Database Configuration
DB_NAME=jobboard_prod
DB_USER=jobboard_user
DB_PASSWORD=your-secure-production-password
DB_HOST=your-production-db-host
DB_PORT=5432
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# Redis Configuration
REDIS_HOST=your-production-redis-host
REDIS_PORT=6379
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/0
CELERY_BROKER_URL=${REDIS_URL}
CELERY_RESULT_BACKEND=${REDIS_URL}

# Elasticsearch Configuration
ELASTICSEARCH_URL=http://your-production-elasticsearch:9200
ELASTICSEARCH_INDEX_PREFIX=jobboard_prod

# AWS S3 Configuration
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=your-region

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@your-domain.com
EMAIL_HOST_PASSWORD=your-email-password

# Security Settings
CSRF_TRUSTED_ORIGINS=https://your-domain.com,https://www.your-domain.com
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Kubernetes Settings
K8S_NAMESPACE=jobboard
K8S_REPLICAS_WEB=3
K8S_REPLICAS_WORKER=2
K8S_REPLICAS_BEAT=1
K8S_RESOURCE_CPU_REQUEST=100m
K8S_RESOURCE_CPU_LIMIT=500m
K8S_RESOURCE_MEMORY_REQUEST=256Mi
K8S_RESOURCE_MEMORY_LIMIT=512Mi